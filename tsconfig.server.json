{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [
    "server.ts",
    "src/integrations/supabase/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 